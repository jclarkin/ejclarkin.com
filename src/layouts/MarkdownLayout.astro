---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title || "Evelyn-Jade Clarkin"}>
  <nav class="back-nav">
    <a href="/">‚Üê Back to Home</a>
  </nav>
  <article>
    <slot />
  </article>
</BaseLayout>

<style>
  .back-nav {
    margin-bottom: 3rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .back-nav a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #b8d4c4;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    background: rgba(26, 61, 46, 0.2);
    border: 1px solid rgba(184, 212, 196, 0.1);
    backdrop-filter: blur(10px);
  }

  .back-nav a:hover {
    color: #fff;
    background: rgba(26, 61, 46, 0.4);
    border-color: rgba(184, 212, 196, 0.3);
    transform: translateX(-4px);
  }

  article {
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }
  
  article h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1.5rem;
    margin-top: 0;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }
  
  article h2 {
    font-size: clamp(1.5rem, 4vw, 2rem);
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
    color: #e8f5e9;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(184, 212, 196, 0.2);
  }

  article h3 {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    line-height: 1.4;
    color: #d4edda;
  }
  
  article p {
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.05rem;
  }

  article ul, article ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
  }

  article li {
    margin-bottom: 0.75rem;
    line-height: 1.7;
  }

  article strong {
    color: #fff;
    font-weight: 600;
  }

  article a {
    color: #b8d4c4;
    text-decoration: underline;
    text-decoration-color: rgba(184, 212, 196, 0.3);
    text-underline-offset: 3px;
    transition: all 0.2s ease;
  }

  article a:hover {
    color: #fff;
    text-decoration-color: rgba(184, 212, 196, 0.6);
  }

  article :global(table) {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid rgba(255, 255, 255, 0.6);
    margin-bottom: 1.5rem;
  }

  article :global(table th),
  article :global(table td) {
    border: 1px solid rgba(255, 255, 255, 0.6);
    padding: 0.75rem 1rem;
    text-align: left;
  }

  article :global(table th) {
    color: #e8f5e9;
    font-weight: 600;
  }

  article :global(table td) {
    color: rgba(255, 255, 255, 0.9);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    article {
      line-height: 1.7;
    }

    article p {
      font-size: 1rem;
    }
  }
</style>
