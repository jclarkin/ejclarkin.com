---
export interface Props {
  title?: string;
}

const { title = "E Clarkin" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="main-content">
      <slot />
    </main>
    <footer class="music-footer">
      <div class="staff-container">
        <svg class="music-staff" viewBox="0 0 1200 80" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
          <!-- Clean staff lines -->
          <line x1="0" y1="10" x2="1200" y2="10" stroke="white" stroke-width="1.5" opacity="0.9"/>
          <line x1="0" y1="25" x2="1200" y2="25" stroke="white" stroke-width="1.5" opacity="0.9"/>
          <line x1="0" y1="40" x2="1200" y2="40" stroke="white" stroke-width="1.5" opacity="0.9"/>
          <line x1="0" y1="55" x2="1200" y2="55" stroke="white" stroke-width="1.5" opacity="0.9"/>
          <line x1="0" y1="70" x2="1200" y2="70" stroke="white" stroke-width="1.5" opacity="0.9"/>
        </svg>
        <div class="music-notes">
          <span class="note">♩</span>
          <span class="note">♪</span>
          <span class="note">♫</span>
          <span class="note">♬</span>
          <span class="note">♩</span>
          <span class="note">♪</span>
          <span class="note">♫</span>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: linear-gradient(135deg, #0f2e1f 0%, #1a3d2e 50%, #0f2e1f 100%);
    background-attachment: fixed;
    min-height: 100vh;
    color: #fff;
    overflow-x: hidden;
    width: 100%;
  }
  
  body {
    margin: 0;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    width: 100%;
    box-sizing: border-box;
  }

  .main-content {
    flex: 1;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    overflow-x: hidden;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .music-footer {
    margin-top: 4rem;
    padding: 2rem 0;
    width: 100%;
    max-width: 100%;
    position: relative;
    box-sizing: border-box;
    overflow: hidden;
  }

  .staff-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    height: 80px;
    box-sizing: border-box;
    overflow: hidden;
  }

  .music-staff {
    width: 100%;
    max-width: 100%;
    height: 100%;
    display: block;
    box-sizing: border-box;
  }

  .music-notes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    max-width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 2rem;
    color: white;
    opacity: 0.95;
    padding: 0 2rem;
    flex-wrap: wrap;
    gap: 0.5rem;
    box-sizing: border-box;
  }

  @media (max-width: 768px) {
    body {
      padding: 1rem;
      width: 100%;
    }

    .music-footer {
      margin-top: 2rem;
      padding: 1.5rem 0;
    }

    .staff-container {
      height: 60px;
    }

    .music-notes {
      font-size: 1.5rem;
      padding: 0 1rem;
    }

    .music-notes .note:nth-child(n+6) {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .music-notes {
      font-size: 1.25rem;
    }

    .music-notes .note:nth-child(n+5) {
      display: none;
    }
  }

  .music-notes .note {
    display: inline-block;
    animation: float 3s ease-in-out infinite;
  }

  .music-notes .note:nth-child(1) { animation-delay: 0s; }
  .music-notes .note:nth-child(2) { animation-delay: 0.4s; }
  .music-notes .note:nth-child(3) { animation-delay: 0.8s; }
  .music-notes .note:nth-child(4) { animation-delay: 1.2s; }
  .music-notes .note:nth-child(5) { animation-delay: 1.6s; }
  .music-notes .note:nth-child(6) { animation-delay: 2s; }
  .music-notes .note:nth-child(7) { animation-delay: 2.4s; }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-8px); }
  }
</style>
