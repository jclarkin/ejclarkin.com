---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Evelyn-Jade Clarkin">
  <header>
    <h1>Evelyn-Jade Clarkin</h1>
    <p class="subtitle">Professional Portfolio - Designing Your Future (GWL30)</p>
  </header>

  <nav>
    <ul class="nav-links">
      <li><a href="/resume-networking">Resume & Networking</a></li>
      <li><a href="/skills-work-samples">Skills & Work Samples</a></li>
      <li><a href="/career-planning">Career Planning</a></li>
      <li><a href="/about">About Me</a></li>
    </ul>
  </nav>
</BaseLayout>

<style>
  header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: #a0a0a0;
    margin-top: 0;
  }

  nav {
    margin-top: 2rem;
  }

  .nav-links {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .nav-links li {
    margin: 0;
  }

  .nav-links a {
    display: block;
    padding: 1rem 1.5rem;
    background: #1e1e1e;
    border: 1px solid #333;
    border-radius: 8px;
    text-decoration: none;
    color: #fff;
    transition: all 0.2s;
    text-align: center;
  }

  .nav-links a:hover {
    background: #2a2a2a;
    border-color: #555;
    transform: translateY(-2px);
  }

  @media (min-width: 768px) {
    .nav-links {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-links a {
      min-width: 200px;
    }
  }
</style>
